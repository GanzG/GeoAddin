<Window x:Name="DetachingFileWindow" x:Class="GeoAddin.DetachFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoAddin"
        mc:Ignorable="d"
        Title="Генерация помещений" Height="250" Width="400" WindowStyle="None" ResizeMode="NoResize">
    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="313*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Комментарий:" Margin="5,5,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="89" Height="26" VerticalAlignment="Top"/>
        <TextBox Name="Comment" Margin="10,35,10,35" TextWrapping="Wrap" Text=" " Grid.ColumnSpan="2"/>
        <Button Content="Запуск" Margin="10,0,0,10" Click="But_Click_On" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="41"/>
        <Button Content="Отмена" Margin="0,0,10,10" Click="But_Click_Off" Grid.Column="1" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="52"/>

    </Grid>
</Window>
