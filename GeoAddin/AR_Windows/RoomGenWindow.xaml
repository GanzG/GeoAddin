<Window x:Name="RoomGeneratingWindow" x:Class="GeoAddin.RoomGenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoAddin"
        mc:Ignorable="d"
        Title="Генерация помещений" Height="200" Width="350" WindowStyle="None" ResizeMode="NoResize">
    <Grid Margin="5,5,5,5">
        <Label Content="Введите значение смещений для помещений:" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
        <Label Content="Смещение сверху" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Смещение снизу" HorizontalAlignment="Left" Margin="5,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Upoffset" HorizontalAlignment="Left" Margin="120,40,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Botoffset" HorizontalAlignment="Left" Margin="120,75,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Запуск" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Click="But_Click_On"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="228,114,0,0" VerticalAlignment="Top" Click="But_Click_Off"/>

    </Grid>
</Window>
